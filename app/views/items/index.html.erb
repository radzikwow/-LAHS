<div class="container-form">
  <div class="form">
    <% @items.each do |item| %>
      <div class="item-container">
        <%= image_tag "items/#{item.name}.png" %>
        <h2> <%= item.name %> </h2>
        <%= simple_form_for(item) do |f|%>
          <%= f.input :name, as: :hidden, input_html: {value: item.name }%>
          <%= f.input :current_level, :collection => 0..19, input_html: { min: '0', max: '19' } %>
          <%= f.submit %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
