<div class="container mt-5" data-controller="computations">

  <!-- DIV FOR ITEM LIST (LEFT) -->
  <div class="container-left" data-controller="active">
    <%= render "item_list" %>
  </div>

  <!-- DIV FOR ACTIVE ITEM / PROGRESS BARS / OPTIONALS / CARDS / HONE BTN (MIDDLE) -->
  <div class="container-middle">
    <%= render "active_item" %>
    <h1 data-computations-target="success"></h1>
    <%= render "progress_bars" %>
    <%= render "optional_mats" %>
    <%= render "cards" %>
    <%= render "hone" %>
  </div>
  <!-- DIV FOR COUNTERS (RIGHT) -->
  <div class="container-right">
    <%= render "counter" %>
  </div>

</div> <!-- container -->
