<div class="container mt-5" data-controller="computations" data-controller="active">

  <!-- DIV FOR ITEM LIST (LEFT) -->
  <div class="container-left">
    <%= render "item_list" %>
  </div>

  <!-- DIV FOR ACTIVE ITEM / PROGRESS BARS / OPTIONALS / CARDS / HONE BTN (MIDDLE) -->
  <div class="container-middle">
    <%= render "active_item" %>
    <h1 data-computations-target="success"></h1>
    <%= render "progress_bars" %>
    <%= render "optional_mats" %>
    <%= render "cards" %>
    <%= render "hone" %>

    <div data-current-level="<%= @service.current_level.level %>" data-computations-target="service">
      <h3 class="button" data-action="click->computations#hone">Hone</h3>
    </div>

  </div>
  <!-- DIV FOR COUNTERS (RIGHT) -->
  <div class="container-right">
    <%= render "counter" %>
  </div>

</div> <!-- container -->
